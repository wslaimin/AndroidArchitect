<idea-plugin>
    <id>com.lm.AndroidArchitect</id>
    <name>AndroidArchitect</name>
    <vendor email="wslaimin@gmail.com" url="http://www.yourcompany.com">TFly</vendor>

    <description><![CDATA[
        <ul>
	<li>
		Support Custom template of VTL(Velocity Template Language)
	</li>
</ul>
<ul>
	<li>
		<span>
			Support Custom options of clean architecture
		</span>
	</li>
</ul>
<ul>
	<li>
		Preview file structure to be created
	</li>
</ul>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
